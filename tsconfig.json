{
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "lib": [
            "es2018"
        ],
        "strict": true,
        "alwaysStrict": true,
        "declaration": true,
        "esModuleInterop": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "composite": true,
        "incremental": true,
        "baseUrl": "./",
        "paths": {
            "*": [ "types/*" ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.json"
    ],
    "exclude": [
        "node_modules"
    ],
    "files": [
        "package.json"
    ]
}